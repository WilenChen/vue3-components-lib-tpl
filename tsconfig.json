{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "skipLibCheck": true
  },
  "include": ["packages"],
  "exclude": ["node_modules"]
}
